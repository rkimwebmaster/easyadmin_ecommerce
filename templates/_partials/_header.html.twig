<div class="content">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				{% for label, flashes in app.session.flashbag.all %}
					{% for flash in flashes %}
						<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
							<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
							<strong>
								{# <i class="icon fas fa-ban"></i> #}
								<span class="fa fa-shopping-cart"></span>
								{{ label|title }}
								!</strong>
							{{ flash }}
						</div>
					{% endfor %}
				{% endfor %}
			</div>
		</div>
	</div>
</div>
<div class="row bg-light pt-4 ">
	<div class="col-8 offset-2 ">
		<div class="widget_menu text-center">
			<div class="form_sub  ">
				<form action="{{url('app_product_search')}}" method='get'>
					<fieldset>
						<div class="field">
							<input
							class="text-center bold " type="text" placeholder="Entrer le produit recherché et appuyer la touche entrer " name="produit"/>
						{# <input type="submit" value="Souscrire "/> #}
						</div>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>
